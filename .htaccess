# ============================================
# .htaccess Principal - VisuPrint Pro
# ============================================

# Protection contre certaines vulnérabilités
<IfModule mod_headers.c>
    # Sécurité: XSS Protection
    Header set X-XSS-Protection "1; mode=block"

    # Sécurité: Prevent MIME sniffing
    Header set X-Content-Type-Options "nosniff"

    # Sécurité: Clickjacking protection
    Header set X-Frame-Options "SAMEORIGIN"

    # Sécurité: Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # HTTPS Strict Transport Security (si HTTPS activé)
    # Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# ============================================
# Protection fichiers sensibles
# ============================================

# Bloquer l'accès aux fichiers .htaccess et .htpasswd
<FilesMatch "^\.ht">
    Require all denied
</FilesMatch>

# Bloquer l'accès aux fichiers de configuration
<FilesMatch "\.(env|ini|conf|config|log|sql|bak|backup)$">
    Require all denied
</FilesMatch>

# Protéger le fichier de configuration PHP
<Files "config.php">
    Require all denied
</Files>

# Bloquer l'accès aux fichiers CSV contenant des données sensibles
<FilesMatch "\.csv$">
    Require all denied
</FilesMatch>

# ============================================
# URL Rewriting (si nécessaire)
# ============================================

RewriteEngine On

# Forcer HTTPS (décommenter si certificat SSL installé)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Forcer www ou non-www (choisir l'un ou l'autre)
# Forcer www:
# RewriteCond %{HTTP_HOST} !^www\.
# RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]

# OU Forcer non-www:
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# ============================================
# Protection contre les injections
# ============================================

# Bloquer les requêtes avec des caractères suspects
<IfModule mod_rewrite.c>
    RewriteCond %{QUERY_STRING} (<|%3C).*script.*(>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|[|%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|[|%[0-9A-Z]{0,2})
    RewriteRule .* - [F,L]
</IfModule>

# ============================================
# Compression GZIP
# ============================================

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# ============================================
# Cache navigateur
# ============================================

<IfModule mod_expires.c>
    ExpiresActive On

    # Images
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"

    # CSS et JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"

    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"

    # HTML (pas de cache)
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# ============================================
# Encodage UTF-8
# ============================================

AddDefaultCharset UTF-8
AddCharset UTF-8 .html .css .js .xml .json .txt

# ============================================
# Désactiver l'index des répertoires
# ============================================

Options -Indexes

# ============================================
# Page d'erreur personnalisée
# ============================================

ErrorDocument 404 /404.html
ErrorDocument 403 /403.html
ErrorDocument 500 /500.html

# ============================================
# Limite de taille d'upload (ajuster si nécessaire)
# ============================================

# IMPORTANT: Ces directives PHP ne fonctionnent PAS en mode FastCGI/FPM
# Utilisez .user.ini à la place (voir fichier .user.ini à la racine)
# php_value upload_max_filesize 20M
# php_value post_max_size 20M
# php_value max_execution_time 300
# php_value max_input_time 300
